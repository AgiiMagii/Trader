<UserControl x:Class="Trader.Controls.GameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trader.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="GameControl_OnLoaded">

    <Grid>
        <!-- Upper menu, main content, bottom inventory panel -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
            <RowDefinition Height="120"/>
            <!-- Bottom inventory panel -->
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Image Source="/Assets/Backgrounds/Beautiful city.jpeg"
               Stretch="UniformToFill"
               Opacity="0.9"
               Panel.ZIndex="0"/>

            <Rectangle Panel.ZIndex="0">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="#FF3A3939" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>

        <!-- Augšējais menu -->
        <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="1" Padding="1">
            <UniformGrid Grid.Row="0" x:Name="GameMenuGrid" Rows="1" Columns="4" Margin="5">
                <Button Content="Save Game" Style="{StaticResource ButtonStyle1}" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Load Game" Style="{StaticResource ButtonStyle1}" Margin="5" Click="LoadGame_Click"/>
                <Button Content="Settings" Style="{StaticResource ButtonStyle1}" Margin="5" IsEnabled="False"/>
                <Button Content="Go to Main Menu" Style="{StaticResource ButtonStyle1}" Margin="5" Click="BackToMainMenu_Click"/>
            </UniformGrid>
        </Border>

        <!-- Vidus saturs -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Cities -->
                <ColumnDefinition Width="5*"/>
                <!-- Products -->
                <ColumnDefinition Width="3*"/>
                <!-- Trading -->
            </Grid.ColumnDefinitions>

            <!-- Cities panel -->
            <Border Background="#80D3D3D3" Style="{StaticResource BorderStyle1}">
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="5">
                    <UniformGrid x:Name="CitiesPanel" Background="#00000000" Columns="2" Height="Auto">

                        <!-- London -->
                        <Button Name="London" Style="{StaticResource GlassButtonStyle}" Click="CityButton_Click" Margin="4" Width="140" Height="140">
                            <Grid>
                                <Image Source="/Assets/Images/London.png" Width="130" Height="130">
                                    <Image.OpacityMask>
                                        <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <TextBlock Text="London" Foreground="White" FontWeight="Bold" FontSize="15"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Button>

                        <!-- Riga -->
                        <Button Name="Riga" Style="{StaticResource GlassButtonStyle}" Click="CityButton_Click" Margin="4" Width="140" Height="140">
                            <Grid>
                                <Image Source="/Assets/Images/Riga.png" Width="130" Height="130">
                                    <Image.OpacityMask>
                                        <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <TextBlock Text="Rīga" Foreground="White" FontWeight="Bold" FontSize="15"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Button>

                        <!-- Amsterdam -->
                        <Button Name="Amsterdam" Style="{StaticResource GlassButtonStyle}" Click="CityButton_Click" Margin="4" Width="140" Height="140">
                            <Grid>
                                <Image Source="/Assets/Images/Amsterdam.png" Width="130" Height="130">
                                    <Image.OpacityMask>
                                        <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <TextBlock Text="Amsterdam" Foreground="White" FontWeight="Bold" FontSize="15"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Button>

                        <!-- Berlin -->
                        <Button Name="Berlin" Style="{StaticResource GlassButtonStyle}" Click="CityButton_Click" Margin="4" Width="140" Height="140">
                            <Grid>
                                <Image Source="/Assets/Images/Berlin.png" Width="130" Height="130">
                                    <Image.OpacityMask>
                                        <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <TextBlock Text="Berlin" Foreground="White" FontWeight="Bold" FontSize="15"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Button>

                        <!-- Milan -->
                        <Button Name="Milan" Style="{StaticResource GlassButtonStyle}" Click="CityButton_Click" Margin="4" Width="140" Height="140">
                            <Grid>
                                <Image Source="/Assets/Images/Milan.png" Width="130" Height="130">
                                    <Image.OpacityMask>
                                        <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <TextBlock Text="Milan" Foreground="White" FontWeight="Bold" FontSize="15"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Button>

                        <!-- Paris -->
                        <Button Name="Paris" Style="{StaticResource GlassButtonStyle}" Click="CityButton_Click" Margin="4" Width="140" Height="140">
                            <Grid>
                                <Image Source="/Assets/Images/Paris.png" Width="130" Height="130">
                                    <Image.OpacityMask>
                                        <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <TextBlock Text="Paris" Foreground="White" FontWeight="Bold" FontSize="15"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Button>

                        <!-- Tokyo -->
                        <Button Name="Tokyo" Style="{StaticResource GlassButtonStyle}" Click="CityButton_Click" Margin="4" Width="140" Height="140">
                            <Grid>
                                <Image Source="/Assets/Images/Tokyo.png" Width="130" Height="130">
                                    <Image.OpacityMask>
                                        <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <TextBlock Text="Tokyo" Foreground="White" FontWeight="Bold" FontSize="15"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Button>

                        <!-- Rome -->
                        <Button Name="Rome" Style="{StaticResource GlassButtonStyle}" Click="CityButton_Click" Margin="4" Width="140" Height="140">
                            <Grid>
                                <Image Source="/Assets/Images/Rome.png" Width="130" Height="130">
                                    <Image.OpacityMask>
                                        <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <TextBlock Text="Rome" Foreground="White" FontWeight="Bold" FontSize="15"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Button>

                        <!-- Sydney -->
                        <Button Name="Sydney" Style="{StaticResource GlassButtonStyle}" Click="CityButton_Click" Margin="4" Width="140" Height="140">
                            <Grid>
                                <Image Source="/Assets/Images/Sydney.png" Width="130" Height="130">
                                    <Image.OpacityMask>
                                        <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <TextBlock Text="Sydney" Foreground="White" FontWeight="Bold" FontSize="15"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Button>

                        <!-- New York -->
                        <Button Name="NewYork" Style="{StaticResource GlassButtonStyle}" Click="CityButton_Click" Margin="4" Width="140" Height="140">
                            <Grid>
                                <Image Source="/Assets/Images/NewYork.png" Width="130" Height="130">
                                    <Image.OpacityMask>
                                        <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <TextBlock Text="New York" Foreground="White" FontWeight="Bold" FontSize="15"
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Button>

                    </UniformGrid>
                </ScrollViewer>



            </Border>

            <!-- ProductsGrid -->

            <Grid Grid.Column="1" x:Name="ProductsGrid" Margin="5,0,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <!-- City label -->
                    <RowDefinition Height="*"/>
                    <!-- Offers ar fonu -->
                </Grid.RowDefinitions>

                <!-- City label -->
                <Label x:Name="CityLabel"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       Content="City"
                       FontSize="60"
                       Margin="140,10,140,0" Height="Auto" VerticalContentAlignment="Center" Grid.RowSpan="2"
                       Style="{StaticResource CityGlowText}"/>

                <!-- Fona bilde + pogas -->
                <Grid Grid.Row="1">
                    <!-- Bilde -->


                    <!-- Pogu tīkls pa virsu -->
                    <Grid VerticalAlignment="Bottom" Margin="10">
                        <UniformGrid Rows="2" Columns="3" x:Name="OfferGrid" Margin="10"
                     Panel.ZIndex="1">
                            <Button x:Name="ProductButton1" Tag="btn" Margin="5" 
                    Style="{StaticResource GlassButtonStyle}" FontSize="20"
                    Click="ProductButton_Click">
                                <StackPanel>
                                    <TextBlock x:Name="ProductQuantity1"/>
                                    <Image x:Name="ProductImage1" Stretch="Uniform" MaxWidth="120" MaxHeight="120">
                                        <Image.Effect>
                                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="20" Opacity="0.9"/>
                                        </Image.Effect>
                                    </Image>
                                    <TextBlock x:Name="ProductPrice1" Text="0.00 €" HorizontalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ProductButton2" Tag="btn" Margin="5" Style="{StaticResource GlassButtonStyle}" FontSize="20" Click="ProductButton_Click">
                                <StackPanel>
                                    <TextBlock x:Name="ProductQuantity2"/>
                                    <Image x:Name="ProductImage2" Stretch="Uniform" MaxWidth="120" MaxHeight="120">
                                        <Image.Effect>
                                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="20" Opacity="0.9"/>
                                        </Image.Effect>
                                    </Image>
                                    <TextBlock x:Name="ProductPrice2" Text="0.00 €" HorizontalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ProductButton3" Tag="btn" Margin="5" Style="{StaticResource GlassButtonStyle}" FontSize="20" Click="ProductButton_Click">
                                <StackPanel>
                                    <TextBlock x:Name="ProductQuantity3"/>
                                    <Image x:Name="ProductImage3" Stretch="Uniform" MaxWidth="120" MaxHeight="120">
                                        <Image.Effect>
                                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="20" Opacity="0.9"/>
                                        </Image.Effect>
                                    </Image>
                                    <TextBlock x:Name="ProductPrice3" Text="0.00 €" HorizontalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ProductButton4" Tag="btn" Margin="5" Style="{StaticResource GlassButtonStyle}" FontSize="20" Click="ProductButton_Click">
                                <StackPanel>
                                    <TextBlock x:Name="ProductQuantity4"/>
                                    <Image x:Name="ProductImage4" Stretch="Uniform" MaxWidth="120" MaxHeight="120">
                                        <Image.Effect>
                                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="20" Opacity="0.9"/>
                                        </Image.Effect>
                                    </Image>
                                    <TextBlock x:Name="ProductPrice4" Text="0.00 €" HorizontalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ProductButton5" Tag="btn" Margin="5" Style="{StaticResource GlassButtonStyle}" FontSize="20" Click="ProductButton_Click">
                                <StackPanel>
                                    <TextBlock x:Name="ProductQuantity5"/>
                                    <Image x:Name="ProductImage5" Stretch="Uniform" MaxWidth="120" MaxHeight="120">
                                        <Image.Effect>
                                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="20" Opacity="0.9"/>
                                        </Image.Effect>
                                    </Image>
                                    <TextBlock x:Name="ProductPrice5" Text="0.00 €" HorizontalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="ProductButton6" Tag="btn" Margin="5" Style="{StaticResource GlassButtonStyle}" FontSize="20" Click="ProductButton_Click">
                                <StackPanel>
                                    <TextBlock x:Name="ProductQuantity6"/>
                                    <Image x:Name="ProductImage6" Stretch="Uniform" MaxWidth="120" MaxHeight="120">
                                        <Image.Effect>
                                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="20" Opacity="0.9"/>
                                        </Image.Effect>
                                    </Image>
                                    <TextBlock x:Name="ProductPrice6" Text="0.00 €" HorizontalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                    </Grid>
                </Grid>
            </Grid>

            <!-- TradingGrid -->

            <Border Grid.Column="2"
        Background="#80D3D3D3"
        Margin="5"
        Style="{StaticResource BorderStyle1}">

                <Grid x:Name="TradingGrid" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <!-- Product name -->
                        <RowDefinition Height="Auto"/>
                        <!-- Quantity controls -->
                        <RowDefinition Height="100"/>
                        <!-- Messages -->
                        <RowDefinition Height="Auto"/>
                        <!-- Prices -->
                        <RowDefinition Height="*"/>
                        <!-- Buy Sell Buttons -->
                    </Grid.RowDefinitions>

                    <!-- Product name -->
                    <Label Grid.Row="0"
               x:Name="lblProductName"
               FontSize="30"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,10,0,10"/>

                    <!-- Quantity controls -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Button Content="−"
                    Style="{StaticResource GlassSmallButton}"
                                FontSize="22"
                    Width="40"
                    Height="40"
                    Margin="5"
                    Click="QuantityButton_Click"/>

                        <Label x:Name="lblQuantity"
                   Content="0"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Width="80"
                   Height="40"
                   Background="White"
                   BorderBrush="Gray"
                   BorderThickness="1"
                   Margin="5"/>

                        <Button Content="+"
                    Style="{StaticResource GlassSmallButton}"
                                FontSize="22"
                    Width="40"
                    Height="40"
                    Margin="5"
                    Click="QuantityButton_Click"
                                />
                    </StackPanel>

                    <!-- Messages -->
                    <Grid Grid.Row="3" Width="200" Height="Auto">
                        <WrapPanel  x:Name="MessagePanel" HorizontalAlignment="Center">
                            <TextBlock 
                                x:Name="txtMessage"
                                Text=""
                                TextWrapping="Wrap"
                                FontSize="20"
                                FontWeight="DemiBold"
                                Foreground="Black"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,10"/>
                            <TextBlock
                                x:Name="txtMessage1"
                                TextWrapping="Wrap"
                                Text=""
                                FontSize="20"
                                FontWeight="DemiBold"
                                Foreground="Black"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,10"/>
                            <TextBlock
                                x:Name="txtMessage2"
                                TextWrapping="Wrap"
                                Text=""
                                FontSize="20"
                                FontWeight="DemiBold"
                                Foreground="Black"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,10"/>
                        </WrapPanel>
                    </Grid>


                    <!-- Prices -->
                    <Grid Grid.Row="2" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <Label Content="Buy price:"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Foreground="DarkSlateGray"
                       HorizontalAlignment="Center"/>
                            <Label x:Name="lblBuyPrice"
                       Content="0.00"
                       FontSize="25"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <Label Content="Sell price:"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Foreground="DarkSlateGray"
                       HorizontalAlignment="Center"/>
                            <Label x:Name="lblSellPrice"
                       Content="0.00"
                       FontSize="25"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Buttons -->
                    <Grid Grid.Row="4" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnBuy"
            Grid.Column="0"
            Content="Buy"
            Style="{StaticResource GlassButtonStyle}"
                                FontSize="24"
            Margin="10"
            Height="60"
            Foreground="DarkSlateGray"
            Click="BuyButton_Click" VerticalAlignment="Bottom"/>

                        <Button x:Name="btnSell"
            Grid.Column="1"
            Content="Sell"
            Style="{StaticResource GlassButtonStyle}"
                                FontSize="24"
            Margin="10"
            Height="60"
            Foreground="DarkSlateGray"
            Click="SellButton_Click" VerticalAlignment="Bottom"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom bar -->
        <Border Grid.Row="2" Margin="5" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" x:Name="productsInventory" Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="10">
                        <Image x:Name="Product1" Stretch="Uniform" MaxWidth="60" MaxHeight="60" Tag="invImg"/>
                        <TextBlock HorizontalAlignment="Center" Tag="invTxt"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10">
                        <Image x:Name="Product2" Stretch="Uniform" MaxWidth="60" MaxHeight="60" Tag="invImg"/>
                        <TextBlock HorizontalAlignment="Center" Tag="invTxt"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10">
                        <Image x:Name="Product3" Stretch="Uniform" MaxWidth="60" MaxHeight="60" Tag="invImg"/>
                        <TextBlock HorizontalAlignment="Center" Tag="invTxt"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10">
                        <Image x:Name="Product4" Stretch="Uniform" MaxWidth="60" MaxHeight="60" Tag="invImg"/>
                        <TextBlock HorizontalAlignment="Center" Tag="invTxt"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10">
                        <Image x:Name="Product5" Stretch="Uniform" MaxWidth="60" MaxHeight="60" Tag="invImg"/>
                        <TextBlock HorizontalAlignment="Center" Tag="invTxt"/>
                    </StackPanel>
                </StackPanel>


                <TextBlock Grid.Column="1" x:Name="BalanceBlock" FontWeight="Bold" FontSize="20" Text=""
           VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,0"/>
                <TextBlock Grid.Column="1" x:Name="BestScoreBlock" FontSize="15" Text="--"
                           VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10,0"/>
            </Grid>
        </Border>
        <Grid x:Name="GameOverOverlay"
              Background="#AA000000" Visibility="Collapsed" Grid.Row="0"
      Grid.RowSpan="3">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="GAME OVER"
                           FontSize="64"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <Button Content="Back to Main Menu"
                        Width="200" Height="50"
                        Click="BackToMainMenu_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

