<UserControl x:Class="Trader.Controls.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             IsVisibleChanged="On_VisibilityChanged">
    <Viewbox Stretch="Fill">
        <Grid>
            <Image Source="/Assets/Backgrounds/Beautiful city.jpeg" Stretch="Fill"/>

            <Grid Background="#AA000000" 
      HorizontalAlignment="Center" VerticalAlignment="Center"
      Width="800"  Height="600"
      x:Name="mainButtonGrid" Visibility="Visible">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Augšējā daļa: Best score -->
                <Grid Grid.Row="0" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Best score:" 
                   FontSize="20" Foreground="White"
                   VerticalAlignment="Top" />

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock x:Name="BestScoreTextBlock" Text="0" FontSize="20" Foreground="White"/>
                        <TextBlock x:Name="BestPlayerTextBlock" Text="--" FontSize="20" Foreground="White"/>
                    </StackPanel>
                </Grid>

                <!-- Apakšējā daļa: pogas -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="New Game" Name="buttNewGame" Style="{StaticResource ButtonStyle1}" Height="60" Width="300" FontSize="25" Margin="0,10" Click="NewGame_Click"/>
                    <Button Content="Saved Games" Name="buttSavedGames" Style="{StaticResource ButtonStyle1}" Height="60" Width="300" FontSize="25" Margin="0,10" Click="SavedGames_Click"/>
                    <Button Content="Exit" Name="buttExitApp" Style="{StaticResource ButtonStyle1}" Height="60" Width="300" FontSize="25" Margin="0,10" Click="ExitButton_Click"/>
                </StackPanel>
            </Grid>


            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
                <TextBlock Text="Version 1.0" Foreground="White" FontSize="18" HorizontalAlignment="Center"/>
            </StackPanel>
            <Grid x:Name="SavedGamesOverlay" 
      Background="#AA000000" 
      Visibility="Collapsed">

                <StackPanel HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Width="400">

                    <TextBlock Text="Saved Games"
                   FontSize="50"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,40"
                   HorizontalAlignment="Center"/>

                    <ListBox x:Name="SavedGamesList" 
                 Height="400"
                             Width="800"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="White"
                 Margin="0,0,0,20"
                             FontSize="25"/>

                    <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center">
                        <Button Content="Load" Width="100" Margin="5"
                    Style="{StaticResource ButtonStyle1}" 
                                FontSize="20"
                    Click="LoadGame_Click"/>
                        <Button Content="Delete" Width="100" Margin="5"
                    Style="{StaticResource ButtonStyle1}" 
                                FontSize="20"
                    Click="Delete_Click"/>
                        <Button Content="Close" Width="100" Margin="5"
                    Style="{StaticResource ButtonStyle1}" 
                                FontSize="20"
                    Click="Close_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid x:Name="NewGameOverlay"
      Background="#AA000000"
      Visibility="Collapsed">

                <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="400">

                    <!-- Virsraksts -->
                    <TextBlock Text="New Game"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

                    <StackPanel Margin="0,0,0,20">
                        <Label Content="Name Your Game:"
           Foreground="White"
           FontSize="16"
           Margin="0,0,0,5"/>

                        <TextBox x:Name="txtGameName"
             Height="35"
             FontSize="16"
             Foreground="White"
             Background="#40FFFFFF"        
                        BorderBrush="#60FFFFFF"
                        
                        BorderThickness="1"
             Padding="10,0"
                        
                        HorizontalContentAlignment="Left"
             VerticalContentAlignment="Center"
             CaretBrush="White"/>
                    </StackPanel>


                    <Grid Height="200" Width="Auto">
                        <Button Content="Play Game"
                Width="300"
                Height="60"
                HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                Style="{StaticResource ButtonStyle1}"
                                FontSize="25"
                Click="PlayGame_Click"/>


                        <Button Content="Close"
                Width="100"
                Height="25"
                HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                Style="{StaticResource ButtonStyle1}"
                Click="btnCloseOverlay_Click"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Viewbox>
</UserControl>

