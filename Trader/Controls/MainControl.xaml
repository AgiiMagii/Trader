<UserControl x:Class="Trader.Controls.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="/Assets/Backgrounds/Beautiful city.jpeg" Stretch="UniformToFill"/>

        <Grid Background="#AA000000" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="250" x:Name="mainButtonGrid" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Button Content="New Game" Name="buttNewGame" Style="{StaticResource ButtonStyle1}" Height="40" Width="200" Margin="0,10" Click="NewGame_Click"/>
                <Button Content="Saved Games" Name="buttSavedGames" Style="{StaticResource ButtonStyle1}" Height="40" Margin="0,10" Click="SavedGames_Click"/>
                <Button Content="Exit" Name="buttExitApp" Style="{StaticResource ButtonStyle1}" Height="40" Margin="0,10" Click="ExitButton_Click"/>
            </StackPanel>
        </Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <TextBlock Text="Version 1.0" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
        </StackPanel>
        <Grid x:Name="SavedGamesOverlay" 
      Background="#AA000000" 
      Visibility="Collapsed">

            <StackPanel HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Width="400">

                <TextBlock Text="Saved Games"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

                <ListBox x:Name="SavedGamesList" 
                 Height="200"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="White"
                 Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center">
                    <Button Content="Load" Width="100" Margin="5"
                    Style="{StaticResource ButtonStyle1}" 
                    Click="LoadGame_Click"/>
                    <Button Content="Delete" Width="100" Margin="5"
                    Style="{StaticResource ButtonStyle1}" 
                    Click="Delete_Click"/>
                    <Button Content="Close" Width="100" Margin="5"
                    Style="{StaticResource ButtonStyle1}" 
                    Click="Close_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid x:Name="NewGameOverlay"
      Background="#AA000000"
      Visibility="Collapsed">

            <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="400">

                <!-- Virsraksts -->
                <TextBlock Text="New Game"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

                <StackPanel Margin="0,0,0,20">
                    <Label Content="Name Your Game:"
           Foreground="White"
           FontSize="16"
           Margin="0,0,0,5"/>

                    <TextBox x:Name="txtGameName"
             Height="35"
             FontSize="16"
             Foreground="White"
             Background="#40FFFFFF"        
                        BorderBrush="#60FFFFFF"
                        
                        BorderThickness="1"
             Padding="10,0"
                        
                        HorizontalContentAlignment="Left"
             VerticalContentAlignment="Center"
             CaretBrush="White"/>
                </StackPanel>

                
                <Grid Height="200" Width="Auto">
                    <Button Content="Play Game"
                Width="150"
                Height="50"
                HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                Style="{StaticResource ButtonStyle1}"
                Click="PlayGame_Click"/>
                
                
                    <Button Content="Close"
                Width="100"
                Height="25"
                HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                Style="{StaticResource ButtonStyle1}"
                Click="btnCloseOverlay_Click"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

