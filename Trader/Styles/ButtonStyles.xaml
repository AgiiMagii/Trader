<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <Style x:Key="ButtonStyle1" TargetType="Button">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="Foreground" Value="DarkSlateGray"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="1" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="DarkGray"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Gray"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="DarkGray"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="Foreground" Value="DarkGray"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="GlassButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="DarkSlateGray"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="MinWidth" Value="110"/>
        <Setter Property="Background">
            <!-- translucent frosted base -->
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">

                    <GradientStop Color="#90FFFFFF" Offset="0.0"/>
                    <!-- top light -->
                    <GradientStop Color="#30FFFFFF" Offset="0.7"/>
                    <!-- mid translucent -->
                    <GradientStop Color="#20FFFFFF" Offset="1.0"/>
                    <!-- bottom -->
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#60FFFFFF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Outer soft shadow -->
                        <Border x:Name="Shadow"
                                    CornerRadius="10"
                                    Background="#00000000">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                        </Border>

                        <!-- Glass surface -->
                        <Border x:Name="Chrome"
                                    CornerRadius="10"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}">
                            <Grid>
                                <!-- subtle glossy highlight -->
                                <Rectangle RadiusX="10" RadiusY="10"
                                               Margin="2"
                                               IsHitTestVisible="False">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#40FFFFFF" Offset="0.0"/>
                                            <GradientStop Color="#10FFFFFF" Offset="0.35"/>
                                            <GradientStop Color="#00FFFFFF" Offset="0.3"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                    <Rectangle.OpacityMask>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FFFFFFFF" Offset="0.0"/>
                                            <GradientStop Color="#00FFFFFF" Offset="0.6"/>
                                        </LinearGradientBrush>
                                    </Rectangle.OpacityMask>
                                </Rectangle>

                                <!-- content presenter -->
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                      RecognizesAccessKey="True" />
                            </Grid>
                        </Border>

                        <!-- pressed overlay -->
                        <Border x:Name="PressedOverlay"
                                    CornerRadius="10"
                                    Background="#00000000"
                                    Opacity="0" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- MouseOver -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Chrome" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#A6FFFFFF" Offset="0.0"/>
                                        <GradientStop Color="#40FFFFFF" Offset="0.9"/>
                                        <GradientStop Color="#28FFFFFF" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Shadow" Property="Opacity" Value="1"/>
                            <Setter TargetName="PressedOverlay" Property="Opacity" Value="0.09"/>
                        </Trigger>

                        <!-- Pressed -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PressedOverlay" Property="Background" Value="#24000000"/>
                            <Setter TargetName="PressedOverlay" Property="Opacity" Value="1"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Disabled look -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="SlateGray"/>
                            <Setter TargetName="Chrome" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#30FFFFFF"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Chrome" Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Optional small variant -->
    <Style x:Key="GlassSmallButton" TargetType="Button" BasedOn="{StaticResource GlassButtonStyle}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="MinWidth" Value="70"/>
        
    </Style>
    <Color x:Key="GlassBaseColor">#80FFFFFF</Color>
    <!-- balts puscaurspīdīgs -->
    <CornerRadius x:Key="GlassCornerRadius">12</CornerRadius>
    <Thickness x:Key="GlassBorderThickness">1</Thickness>
    <FontFamily x:Key="GlassFontFamily">Segoe UI</FontFamily>
    <sys:Double x:Key="GlassFontSize">14</sys:Double>

    
    <Style x:Key="CityImageStyle" TargetType="Image">
        <Setter Property="Width" Value="130"/>
        <Setter Property="Height" Value="130"/>
        <Setter Property="OpacityMask">
            <Setter.Value>
                <RadialGradientBrush GradientOrigin="0.5,0.5"
                                 Center="0.5,0.5"
                                 RadiusX="0.5" RadiusY="0.5">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="ProductImageStyle" TargetType="Image">
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="MaxWidth" Value="120"/>
        <Setter Property="MaxHeight" Value="120"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="White"
                              ShadowDepth="0"
                              BlurRadius="20"
                              Opacity="0.9"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>